
public class Heuristic {
	public int evaluate(int move)
	{
		int playerNumber = 0;
		if(winningMove(move))
		{
			if(playerNumber==0)//check whose turn it is 
			{
				return 100;
			}
			else return 0;
		}
		else if(stillPossibleToWin(move))
		{
			return furtherEvaluate(move);
		}
		else if(impossibleToWin(move))
		{
			return 0;
		}
		else 
			return furtherEvaluate(move);
	}
	
	
	public Boolean winningMove(int move)
	{
		if(Evaluations.checkMaxChain(move)>=SamplePlayer.numToWin)
		{
			return true;
		}
		else return false;
		
	}
	public Boolean losingMove(int move)
	{
		return false;
		
	}
	public Boolean stillPossibleToWin(int move)
	{
		return true;
	}
	public Boolean impossibleToWin(int move)
	{
		return false;
	}
	public int furtherEvaluate(int move)
	{
		return 0;
	}
	
}
